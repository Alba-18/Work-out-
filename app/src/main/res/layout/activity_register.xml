<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EDA7">

    <!--Register Title  -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/salsa"
        android:text="REGISTER"
        android:textColor="#000000"
        android:textSize="40dp"
        android:translationY="20dp"
        android:translationX="90dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.123"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteY="-31dp" />

    <!-- Profile Row Back -->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/goBackRegister"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/arrow_back"
        android:onClick="onClick"
        android:translationX="3dp"
        android:translationY="3dp"
        app:layout_constraintBottom_toTopOf="@+id/Register_Layout"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <LinearLayout
        android:id="@+id/Register_Layout"
        android:layout_width="374dp"
        android:layout_height="620dp"
        android:background="@drawable/shape"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.432"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.752">


        <ScrollView
            android:id="@+id/Register_ScrollView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:orientation="vertical">

                <!-- Register Name Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/salsa"
                    android:text="Name:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="0dp" />

                <!-- Register Name -->
                <EditText
                    android:id="@+id/user_Name_Register"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/salsa"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="18dp"
                    android:translationX="25dp"
                    android:translationY="3dp" />

                <!--Register Email Title-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/salsa"
                    android:text="Email:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="30dp" />

                <!--Register Email-->
                <EditText
                    android:id="@+id/Register_Email"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/salsa"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="18dp"
                    android:translationX="25dp"
                    android:translationY="30dp" />

                <!-- Register Password Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/salsa"
                    android:text="Password:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="60dp" />

                <!-- Register Password -->
                <EditText
                    android:id="@+id/user_Password"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/salsa"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="18dp"
                    android:translationX="25dp"
                    android:translationY="60dp" />

                <!-- Register Confirm password Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="-20dp"
                    android:fontFamily="@font/salsa"
                    android:text="Confirm password:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="80dp" />

                <!-- Register Confirm password -->
                <EditText
                    android:id="@+id/Register_ConfirmPassword"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/salsa"
                    android:padding="10dp"
                    android:inputType="textPassword"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="18dp"
                    android:translationX="25dp"
                    android:translationY="80dp" />

                <!-- Register Age Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/salsa"
                    android:text="Age:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="80dp" />

                <!-- Register Age Image -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/age_group"
                    android:translationX="230dp"
                    android:translationY="65dp" />

                <!-- Register Age -->
                <EditText
                    android:id="@+id/Register_Age"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/salsa"
                    android:inputType="number"
                    android:padding="10dp"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="18dp"
                    android:translationX="25dp"
                    android:translationY="30dp" />


                <!-- Register Weight Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/salsa"
                    android:text="Weight:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="40dp" />

                <!-- Register Weight Image -->

                <!-- Register Weight -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/scale"
                    android:translationX="230dp"
                    android:translationY="25dp" />

                <EditText
                    android:id="@+id/Register_Weight"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/salsa"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="18dp"
                    android:translationX="25dp"
                    android:translationY="-10dp" />

                <!-- Register Height Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/salsa"
                    android:text="Height:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="-3dp" />

                <!-- Register Weight Image -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/height"
                    android:translationX="230dp"
                    android:translationY="-15dp" />

                <!-- Register Weight -->
                <EditText
                    android:id="@+id/Register_Height"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:fontFamily="@font/salsa"
                    android:inputType="number"
                    android:singleLine="true"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="18dp"
                    android:translationX="25dp"
                    android:translationY="-50dp" />


                <!-- Register Level of exercise Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/salsa"
                    android:text="Level of exercise:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="-35dp" />

                <!-- Register Level of exercise Image -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/next_level"
                    android:translationX="230dp"
                    android:translationY="-40dp" />

                <!-- Register Level of exercise -->
                <Spinner
                    android:id="@+id/Register_LevelOfExercise"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:spinnerMode="dropdown"
                    android:translationX="25dp"
                    android:translationY="-80dp"
                    tools:ignore="SpeakableTextPresentCheck" />

                <!-- Register Cardio Exercise Title-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/salsa"
                    android:text="Cardio:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="-70dp" />

                <!-- Register Cardio Exercise Image -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/workout"
                    android:translationX="230dp"
                    android:translationY="-80dp" />

                <!-- Register Cardio Exercise -->
                <Spinner
                    android:id="@+id/Register_CardioExercise"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:spinnerMode="dropdown"
                    android:translationX="25dp"
                    android:translationY="-115dp" />

                <!-- Register Exercise Impact Title -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/salsa"
                    android:text="Exercise impact:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="-105dp" />

                <!-- Register Exercise Impact Image -->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/weakness"
                    android:translationX="230dp"
                    android:translationY="-120dp" />

                <!-- Register Exercise Impact -->
                <Spinner
                    android:id="@+id/Register_ExerciseImpact"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:spinnerMode="dropdown"
                    android:translationX="25dp"
                    android:translationY="-150dp" />

                <!-- Register Objetive Title-->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/salsa"
                    android:text="Objetive:"
                    android:textColor="#000000"
                    android:textSize="25dp"
                    android:translationX="15dp"
                    android:translationY="-140dp" />

                <!-- Register Objetive Image-->
                <ImageView
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@drawable/goal"
                    android:translationX="230dp"
                    android:translationY="-150dp" />

                <!-- Register Objetive -->
                <Spinner
                    android:id="@+id/registerObjetive"
                    android:layout_width="200dp"
                    android:layout_height="40dp"
                    android:background="@drawable/edit_text"
                    android:spinnerMode="dropdown"
                    android:translationX="25dp"
                    android:translationY="-185dp" />

                <!-- Finish Button -->
                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/Register_FinishButton"
                    android:layout_width="192dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center_horizontal"
                    android:background="@drawable/button"
                    android:fontFamily="@font/salsa"
                    android:onClick="createAccount"
                    android:text="FINISH"
                    android:textColor="#FFE9C5"
                    android:textSize="30dp"
                    android:translationY="-100dp" />

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
