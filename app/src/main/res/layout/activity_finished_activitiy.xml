<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EDA7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Main Row Back-->

    <!--Main Settings-->

    <!--Main Profile-->

    <FrameLayout
        android:id="@+id/GreenFrameMain"
        android:layout_width="371dp"
        android:layout_height="603dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656">

        <FrameLayout
            android:layout_width="327dp"
            android:layout_height="503dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:background="@drawable/activityshape">

            <!--Map view-->

            <!--Activities Button-->
            <TextView
                android:id="@+id/Title_Map"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/salsa"
                android:text="CONGRATULATIONS!!!"
                android:textAlignment="center"
                android:textColor="#592D1D"
                android:textSize="33dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="70dp"
                android:layout_gravity="top|center"
                android:background="@drawable/clapping" />

            <!-- Time Text-->
            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="250dp"
                android:layout_gravity="center|bottom"
                android:layout_marginBottom="20dp"
                android:background="@drawable/lightshape">

                <!--Level Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="46dp"
                    android:fontFamily="@font/salsa"
                    android:text="You have done:"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/info_finished_exercise_number"
                    android:layout_width="match_parent"
                    android:layout_height="48dp"
                    android:layout_marginTop="40dp"
                    android:fontFamily="@font/salsa"
                    android:text="*get from exercise*"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="25dp" />

                <TextView
                    android:id="@+id/info_finished_exercise"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="100dp"
                    android:fontFamily="@font/salsa"
                    android:text="*get from exercise*"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="25dp" />

            </FrameLayout>

        </FrameLayout>
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activitiesbuttonmain"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_marginBottom="10dp"
            android:layout_gravity="bottom|center"
            android:background="@drawable/button"
            android:fontFamily="@font/salsa"
            android:text="FINISH"
            android:textColor="#FFE9C5"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>