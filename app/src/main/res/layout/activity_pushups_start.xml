<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F2EDA7"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--Main Row Back-->
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Row_Push_Up"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginHorizontal="25sp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="17dp"
        android:background="@drawable/arrow_back"
        android:onClick="onClick"
        android:translationX="3dp"
        android:translationY="3dp"
        app:layout_constraintBottom_toTopOf="@+id/GreenFrameMain"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SpeakableTextPresentCheck" />

    <!--Main Settings-->

    <!--Help -->

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/HelpPushUp"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="344dp"
        android:layout_marginBottom="22dp"
        android:background="@drawable/help"
        app:layout_constraintBottom_toTopOf="@+id/GreenFrameMain"
        app:layout_constraintEnd_toStartOf="@+id/profile_pushup"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/profile_pushup"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_gravity="center_vertical"
        android:layout_marginBottom="22dp"
        android:background="@drawable/profile"
        app:layout_constraintBottom_toTopOf="@+id/GreenFrameMain"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.955"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0"
        tools:ignore="SpeakableTextPresentCheck" />

    <FrameLayout
        android:id="@+id/GreenFrameMain"
        android:layout_width="371dp"
        android:layout_height="603dp"
        android:background="@drawable/shape"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.656">

        <FrameLayout
            android:layout_width="327dp"
            android:layout_height="503dp"
            android:layout_gravity="center|top"
            android:layout_marginTop="10dp"
            android:background="@drawable/activityshape">

            <!--Map view-->

            <!--Activities Button-->
            <TextView
                android:id="@+id/Title_Map"
                android:layout_width="match_parent"
                android:layout_height="98dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/salsa"
                android:text="PUSH-UP ROUTINE"
                android:textAlignment="center"
                android:textColor="#592D1D"
                android:textSize="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="117dp"
                android:layout_height="117dp"
                android:layout_gravity="left|top"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/push_up" />

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="70dp"
                android:background="@drawable/stopwatch" />

            <!-- Time Text-->
            <TextView
                android:id="@+id/time_start_pushups"
                android:layout_width="80dp"
                android:layout_height="40dp"
                android:layout_marginLeft="190dp"
                android:layout_marginTop="75dp"
                android:fontFamily="@font/salsa"
                android:text="30 min"
                android:textColor="#592D1D"
                android:textSize="25dp" />

            <FrameLayout
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:layout_marginLeft="150dp"
                android:layout_marginTop="130dp"
                android:background="@drawable/lightshape">

                <!--Level Text -->
                <TextView
                    android:id="@+id/difficulty_start_pushups"
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:fontFamily="@font/salsa"
                    android:text="Intermediate"
                    android:textColor="#592D1D"
                    android:textSize="25dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:background="@drawable/lightshape">

                <!--Level Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/salsa"
                    android:text="Find a place with enough space and get ready"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="25dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="300dp"
                android:background="@drawable/lightshape">

                <ImageView
                    android:layout_width="55dp"
                    android:layout_height="55dp"
                    android:layout_gravity="left|center"
                    android:layout_marginLeft="10dp"
                    android:background="@drawable/push_up" />

                <!--Level Text -->
                <TextView
                    android:id="@+id/pushups_exercise_serie"
                    android:layout_width="208dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right|center"
                    android:fontFamily="@font/salsa"
                    android:text="10-11-12-14-10-9"
                    android:textColor="#592D1D"
                    android:textSize="25dp" />
            </FrameLayout>

            <FrameLayout
                android:layout_width="300dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="160dp"
                android:background="@drawable/lightshape">

                <!--Level Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/salsa"
                    android:text="60 seconds rest between series"
                    android:textAlignment="center"
                    android:textColor="#592D1D"
                    android:textSize="25dp" />
            </FrameLayout>

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/activitiesbuttonmain"
            android:layout_width="300dp"
            android:layout_height="60dp"
            android:layout_gravity="bottom|center"
            android:layout_marginBottom="10dp"
            android:background="@drawable/button"
            android:fontFamily="@font/salsa"
            android:onClick="onClick"
            android:text="start workout"
            android:textColor="#FFE9C5"
            android:textSize="30dp"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>